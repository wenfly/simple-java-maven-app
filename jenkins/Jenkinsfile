pipeline {
        agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    //agent { label 'master' }
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -v'
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                //sh 'docker version'
                sh 'mvn -v'
                sh 'mvn test -Dmaven.test.failure.ignore=true'
            }
            post {
                success {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh 'mvn -v'
                sh './jenkins/scripts/deliver.sh'
            }
        }
        stage('build image') {
          agent {label 'master'}
          steps {
                 sh 'mvn -v'
                 sh 'docker version'                        

          }
        }
    }

}
