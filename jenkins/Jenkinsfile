pipeline {
    agent none
    stages {
        stage('Back-end') {
            agent {
                docker {
                  image 'maven:3-alpine'
                  args '-v /root/.m2:/root/.m2'
                  reuseNode true
                }
            }
            steps {
                echo "steps 1"
                sh 'mvn -v'
                sh 'ls -lh'
            }
            steps {
                echo "steps 1"
               sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Front-end') {
            agent {
                docker { image 'node:16.13.1-alpine' }
            }
            steps {
                sh 'node --version'
                sh 'ls -lh'
            }
        }
    }
}
