pipeline {
    agent none
    stages {
        stage('Back-end') {
            agent {
                docker {
                  image 'maven:3-alpine'
                  args '-v /root/.m2:/root/.m2'
                  //reuseNode true
                }
            }
          stages {
            stage('back-end 1'){
             steps{
               sh 'mvn  -v'
             }

           }
           stage('back-end 2'){
             steps{
               sh 'ls -lh ./target'
             }
           }
           stage('back-end 3'){
             steps{
               sh 'mvn -B -DskipTests clean package'
             }
           }
         

         }
            //steps {
            //    echo "steps 1"
            //    sh 'mvn -v'
            //    sh 'ls -lh ./target'
            //    echo "steps 1"
            //   sh 'mvn -B -DskipTests clean package'
            //}
        }  
        stage('Front-end') {
            agent { label 'master' } 
            options { 
              timeout(time: 1, unit: 'HOURS')
              skipDefaultCheckout()
            }
                //docker { 
                  //image 'docker:dind'
                  //image 'node:16.13.1-alpine'
                //}
            steps {
                sh 'docker version'
                sh 'ls -lh ./target'
            }
        }
    }
}

